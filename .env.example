# Backend
HOST=0.0.0.0
PORT=8080
APP_ENV=dev

# OpenAI (for AI Suggestions)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_PREVIEW=
OPENAI_MODEL_CONVERT=
OPENAI_MODEL_SUGGEST=
AI_PROMPT_PROFILE=static_v3
AI_PREVIEW_MAX_TOKENS=600
AI_CONVERT_MAX_TOKENS=1200
AI_SUGGEST_MAX_TOKENS=900
AI_SUGGEST_TIMEOUT=45s
MAX_AUDIO_UPLOAD_BYTES=31457280

# Spec validation guardrails
SPEC_STRICT_MODE=true
SPEC_MIN_HEADER_CONFIDENCE=60
SPEC_MAX_ROW_LOSS_RATIO=0.4

# API rate limiting (per IP per RATE_LIMIT_WINDOW)
RATE_LIMIT_WINDOW=1m
PREVIEW_RATE_LIMIT=60
CONVERT_RATE_LIMIT=60
AI_SUGGEST_RATE_LIMIT=30

# Comma-separated trusted proxy IPs/CIDRs for Gin ClientIP resolution
# Example for local dev: 127.0.0.1,::1
TRUSTED_PROXIES=127.0.0.1,::1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000
COOKIE_SECRET=replace-with-32-byte-secret
